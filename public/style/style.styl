cw-font = district-font = 'Zilla Slab', Times;

cw-blue = #00b7f1
cw-gold = #FDBB30
cw-orange = #f16522
dark-gray = #666
error = #860038
off-black = #111
light-gray = #ccc
success = #1ABC9C
lgt-blue = #0C2340
lgt-red = #D50032


  
html, body
  font 18px cw-font
  margin 0
  padding 0
  position relative
    
a
  color cw-orange
  font-weight 700
  text-decoration none

a:hover
	color cw-blue
	cursor pointer
	text-decoration underline

a:visited
	color cw-blue
	text-decoration underline
	
h4
	text-align center
	
.content__center
	display block
	margin 0 auto
	  
.container
	min-height 100%
	min-width 1200px
	position relative
	&:after
		content ''
		display block
	
.inner
	display block
	margin-top 40px
	max-width 720px
	padding 60px 20px
	
.main 
	max-width 680px
	img
		width 100%
		margin-left 20px
		max-width 400px
span.copy--body
	font-weight 300
	
ul
	list-style none
		
li
	font-size 18px
	margin-bottom 10px
	
.global__footer
	background cw-blue
	color white
	font-size 18px
	font-family Rubik
	height 210px
	img
		margin-top 50px
		max-width 220px
	ul
		margin-top 38px
		float right
		list-style none
		li.fade--trans a
			background white
			color cw-orange
			cursor pointer
			font-size 30px
			font-weight 700
			padding 2px 35px
			text-align left
			text-shadow 1px 1px success
	
.global__footer ul li.fade--trans:hover,
.global__footer ul li.fade--trans a:hover
	background cw-orange
	color white
	-webkit-transition all 0.4s ease-out
  -moz-transition all 0.4s ease-out
  -o-transition all 0.4s ease-out
  transition all 0.4s ease-out
  	
.global__footer--inner
	max-width 720px

.visually-hidden
	font-size 0
	height 0
	visibility hidden
	
@media (max-width: 760px)
	body, html
		overflow-x hidden
		
	.container
		min-width 0
		
	.inner
		margin-top 10px
		padding 10px 20px
		h3
			text-align center
		
	.main
		img
			margin 5px 10px
			width 75%
			
	ul.list--copy
		margin-top 10px
		padding 0 15px
			
	.list--copy 
		li
			border-top 1px solid light-gray
			padding-top 10px
			&:first-of-type
				border-top none
			
	li strong:first-child
		display block
		margin-bottom 5px
		
	li .copy--body strong
		display inline
			
	.global__footer 
		height 350px
		ul, img
			float none
		ul
			margin 0 auto
			padding 20px 0
			text-align center
			width 100%
		img
			display block
			margin 20px auto 0 auto
			
	.global__footer ul li.fade--trans,
	.global__footer ul li.fade--trans a,
	.global__footer ul li.fade--trans a:hover
		display block
		margin 0 auto
		max-width 200px
		text-align center
	